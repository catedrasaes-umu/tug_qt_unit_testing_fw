<?xml version="1.0" encoding="UTF-8"?>
<project default="generateMain" name="testsuite_generator_project">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse_new/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../eclipse_ws_saes"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="testsuite_generator_project.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/testsuite_generator_project/bin"/>
    </path>

    <path id="testsuite_generator_project.classpath">
        <path refid="testsuite_generator_project.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="testsuite_generator_project.libraryclasspath.alljars">
        <pathelement location="../testsuite_generator_project/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="testsuite_generator_project.classpath.alljars">
        <path refid="testsuite_generator_project.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generateMain">
        <java classname="org.eclipse.acceleo.qt_testsuite.generator.main.GenerateMain" classpathref="testsuite_generator_project.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generateMain.alljars">
        <java classname="org.eclipse.acceleo.qt_testsuite.generator.main.GenerateMain" classpathref="testsuite_generator_project.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
